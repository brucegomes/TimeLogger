<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Version>1.1.1</Version>
    <WarningLevel>4</WarningLevel>
    <UserSecretsId>2ee50c89-617a-4aaf-9883-5454cb63425b</UserSecretsId>
  </PropertyGroup>

  <PropertyGroup>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>cadence</ToolCommandName>
    <PackageOutputPath>./nupkg</PackageOutputPath>
    <PackageId>Cadence</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Authors>Keboo</Authors>
    <Description>A dotnet global tool managing Toggl time entries.</Description>
    <PackageProjectUrl>https://github.com/Keboo/TimeLogger</PackageProjectUrl>
    <PackageTags>toggl</PackageTags>
    <RepositoryUrl>https://github.com/Keboo/TimeLogger</RepositoryUrl>
    <Title>Cadence</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.CommandLine.DragonFruit" Version="0.3.0-alpha.21216.1" />
    <PackageReference Include="Toggl.Api" Version="8.0.7" />
  </ItemGroup>

</Project>
